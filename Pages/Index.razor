@page "/"

<svg height="500" width="500">
    <symbol id="green" width="100" height="100" viewBox="0 0 2 2">
        <circle cx="1" cy="1" r="0.9" fill="green" stroke="black" stroke-width="0.1"></circle>
    </symbol>
    <symbol id="red" width="100" height="100" viewBox="0 0 2 2">
        <circle cx="1" cy="1" r="0.9" fill="red" stroke="black" stroke-width="0.1"></circle>
    </symbol>
    <use xlink:href="#green" x="100" y="100"></use>
    <CascadingValue Value=Position>
        <UsingCircle />
    </CascadingValue>
</svg>

@code {
    protected (double x, double y) Position = (300, 100);
}